{
    "version": "0.1.0",
    "command": "mingw32-make",
    "isShellCommand": true,
    "showOutput": "always",
    "args": [

    ],
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
            "relative",
            "${workspaceRoot}"
        ],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5,
            "loop": true
        }
    }
}
